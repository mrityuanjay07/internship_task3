        border-radius: 6px;
        cursor: pointer;
        margin-top: 10px;
    }

    #result {
        font-size: 1.2rem;
        margin-top: 15px;
        font-weight: bold;
    }

    /* ---------- IMAGE CAROUSEL ---------- */
    #carousel {
        max-width: 700px;
